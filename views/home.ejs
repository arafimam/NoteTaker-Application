<!--Third feature-->
<div class="row">
    <div class="col-lg-6 col-md-12 col-sm-12">
        <div class="bucket">
            <img src="/images/time.png" class="logo3" alt="logo1">
            <h1 class='topic3 '>Create. Plan. Organize and Stay on track</h1>
            <h4 class="desc3"><i>Get daily reminders of things to do and create your own schedule</i>
            </h4>
        </div>
        
    </div>
    <div class="col-lg-6 col-md-12 col-sm-12">
        <img src="/images/lists.png" class="image3" alt="image3">
    </div>
</div>

<!--Subscription model for Note taking tips-->
<div class="subscription">
    <div class="infoForm">
        <img src="/images/tips.jpg" class="tipsImage" alt="tips" style="width: 25%; height:25%;">
        <h1>Subscribe to receive weekly note taking tips.</h1>
        <form method="post" action="/" class="form">
            <br><h4 class="emailText">Email Address</h4>
            <input type="text" name="email" class="emailTextBox" placeholder="Email Address">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small><br><br>
            <h4 class="nameText">First Name</h4>
            <input type="text" name="firstName" class="fullNameTextBox" placeholder="FirstName">
            <h4 class="nameText">Last Name</h4>
            <input type="text" name="lastName" class="fullNameTextBox" placeholder="Last Name">
            <br><br>
            <p class="subText"><%= subscription %></p><br>
            <button type="submit" class="btn btn-primary">Subscribe</button>
            

        </form>
    </div>

   
</div>