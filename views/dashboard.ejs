<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="/css/dashboard.css">
<div class="row header">
    <div class="col">
        <h1 class="welcomeMessage">Dashboard</h1>
    </div>
    <div class="col logOut">
        <a href="/" class="btn btn-danger logOut-btn" role="button">Logout</a>  <!--Button takes user to home page-->
    </div>
</div>

<div class="row dashboard">
    <div class="col info">
        <h3>User Information</h3><br><br>
        <img src="/images/Sample_User_Icon.png" class="userLogo" alt="user Logo">
        <p>Email Address:</p>
        <p> <%= userEmail %> </p>
        <p> Full Name: </p>
        <p> <%= userName %></p>
    </div>
    <div class="col infos">
        <h1>Notes Created</h1>
        <div class="stats">
            <div class="amount">
                <h2><%= userNotes %></h2>
            </div>
            <a class="btn btn-primary tap" href="#" role="button">+ Create Notes</a>
        </div>
        
    </div>
    <div class="col infos">
        <h1>Things Pending</h1>
        <div class="stats">
            <div class="amount">
                <h2><%= userToDo %></h2>
            </div>
            <a class="btn btn-success tap" href="#" role="button">+ Create To-Do List</a>
        </div>
        
    </div>
    <div class="col infos">
        <h1>Average Quiz Score</h1>
        <div class="stats">
            <div class="amount">
                <h2><%= userScore %></h2>
            </div>     
        
        <a class="btn btn-warning tap" href="#" role="button">+ Create Quiz</a>
    </div>
    </div>

</div>



